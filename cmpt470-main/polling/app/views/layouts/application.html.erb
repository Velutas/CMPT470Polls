<!DOCTYPE html>
<html>
<head>
  <title>Polling by RSKK</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag :defaults, 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
 
<body>
    <!-- Header -->
  <header>
    <div class="wrapper">
            <a href="/"><span>Polling by RSKK</span></a>
      <nav>
        <ul>
          <% if current_user %>
            <li><%= link_to "Profile", "/users/" + current_user.id.to_s %></li>
            <li><%= link_to "Options", options_path %></li>
            <li>
              <%= link_to "Notifications", notifications_path %>
              <% if notifications_amt > 0 %>
                 <span id="header-notifications"><%= notifications_amt %></span>
              <% end %>
            </li>
            <li><%= link_to "Messages", messaging_path %></li>
            <li><%= link_to "Log out", logout_path, method: "destroy" %></li>
          <% else %>
            <li><a href="/login">Log in</a></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
  
    <!-- Page content -->
  <section style="margin-top:5em;">
    <div class="wrapper">
      <p id="notice"><%= flash[:info] %></p>
      <p id="error"><%= flash[:error] %></p>
      <%= yield %>
    </div>
  </section>
</body>
</html>



